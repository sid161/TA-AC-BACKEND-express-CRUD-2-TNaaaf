<body>
    <h1>Add A book</h1>
    <form action="/books" method="POST">
        <input type="text" name="title" placeholder="enter title"/>
        <input type="text" name="summary" placeholder="enter summary"/>
        <input type="number" name="pages" placeholder="No of pages"/>
        <input type="text" name="publication" placeholder="publication"/>
        <input type="text" name="cover_image" placeholder="CoverImage"/>
